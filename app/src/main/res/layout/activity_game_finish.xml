<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@drawable/pineapplecut"
                android:gravity="center_vertical">
    <RelativeLayout android:layout_width="wrap_content"
                    android:id="@+id/finish_layout_score"
                    android:padding="56dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/finish_background"
                    android:layout_height="wrap_content">
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Your score is "/>
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Highscore is "/>
    </RelativeLayout>
    <Button android:layout_width="wrap_content"
            android:layout_alignParentBottom="true"
            android:text="Start new Game"
            android:background="@drawable/button_number_background"
            android:layout_centerHorizontal="true"
            android:id="@+id/finish_start_new_game"
            android:padding="16dp"
            android:layout_height="wrap_content"/>
</RelativeLayout>
